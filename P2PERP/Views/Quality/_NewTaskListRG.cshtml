<!-- 🔹 Wrap Whole Partial in One Card Only -->

<button type="button"
        class="btn btn-primary btn-sm btnback"
        onclick="location.href='/Quality/IndexRG'">
    <i class="bi bi-arrow-left"></i> Back
</button>

<div class="card shadow-lg rounded-4 border-0 bg-white">
   




    <div class="card-body">

        <!-- GRN Info -->
