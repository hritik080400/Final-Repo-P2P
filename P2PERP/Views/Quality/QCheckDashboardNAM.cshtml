        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 10px;
    }

    .dt-left {
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
    }

    .chart-container {
        position: relative;
        flex: 1 1 45%;
        max-width: 600px;
        margin: 0 auto;
        height: 300px;
    }


    .chartparent {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        gap: 20px;
        margin-top: 20px;
    }

    .Confirm-list-body, .Nonconfirm-list-body {
        max-height: 400px;
        overflow-y: auto;
        overflow-x: auto;
        padding: 10px 15px;
    }

